# (soon to be) AUTOGENERATED ZMAKE MAKEFILE. DO NOT EDIT UNLESS YOU KNOW MORE THAN ME. (extremely likely)

COMPILER:=g++
OPTIONS:= # options go here

INCLUDE=../inc/*
SOURCE=../src/*

PROJECT=zmake

build: $(INCLUDE) $(SOURCE)
ifeq ($(wildcard $(PROJECT)), $(PROJECT))
	@echo '>> Build already exists... rebuilding...'
	@rm $(PROJECT)
	$(COMPILER) $(OPTIONS) -I$(INCLUDE) $(SOURCE) -o ./$(PROJECT)
else
	$(COMPILER) $(OPTIONS) -I$(INCLUDE) $(SOURCE) -o ./$(PROJECT)
endif

clean:
ifeq ($(wildcard $(PROJECT)), $(PROJECT))
	@rm $(PROJECT)
	@echo '>> All clean!'
else
	@echo '>> Nothing to clean...'
endif

run:
ifeq ($(wildcard $(PROJECT)), $(PROJECT))
	@echo '>> Existing build found... rebuilding...'
	@rm $(PROJECT)
	$(COMPILER) $(OPTIONS) -I$(INCLUDE) $(SOURCE) -o ./$(PROJECT)
	./$(PROJECT)
else
	@echo '>> Build not found... building...'
	$(COMPILER) $(OPTIONS) -I$(INCLUDE) $(SOURCE) -o ./$(PROJECT)
	./$(PROJECT)
endif
